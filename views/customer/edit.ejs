<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1>Edit Customer (<%= customer.firstName %>
            <%= customer.lastName %>)</h1>
    <div class="btn-toolbar mb-2 mb-md -">
        <!-- <div class="btn-group me-2">
            <a href="/add" class="btn btn-sm btn-outline-secondary">?</a>
        </div> -->
    </div>
</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">Edit Customer</li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>Last Updated : <%= new Date(customer.updatedAt).toUTCString() %></b>
            <b>User ID : <%= customer._id %></b>
        </div>
    </div>
</div>

<form action="/edit/<%= customer._id %>?_method=PUT" method="POST">
    <div class="row form-group mb-4">
        <div class="col">
            <label for="firstName">First Name</label>
            <input type="text" class="form-control" id="firstName" name="firstName" value="<%= customer.firstName %>"
                placeholder="First Name" required>
            <div id="firstNameError" class="invalid-feedback"></div>
        </div>
        <div class="col">
            <label for="lastName">Last Name</label>
            <input type="text" class="form-control" id="lastName" name="lastName" value="<%= customer.lastName %>"
                placeholder="Last Name" required>
            <div id="lastNameError" class="invalid-feedback">
            </div>
        </div>
        <div class="row form-group mb-4">
            <div class="col">
                <label for="telephoneNum">Telephone Number</label>
                <input type="tel" class="form-control" id="telephoneNum" name="telephoneNum"
                    value="<%= customer.telephoneNum %>" placeholder="Telephone Number" required>
            </div>
            <div class="col">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= customer.email %>"
                    placeholder="Email" required>
            </div>
        </div>
        <div class="form-group mb-4">
            <label for="detail">Customer Detail</label>
            <textarea class="form-control" id="detail" name="detail" rows="3"
                placeholder="Customer Detail"><%= customer.detail %></textarea>
        </div>
        <div class="form-group mb-4">
            <button type="submit" class="btn btn-primary">Save Edit</button>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete</button>
        </div>
</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Delete Customer</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete this customer?</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <form action="/edit/<%= customer._id %>?_method=DELETE" method="POST" class="position-relative">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>

        </div>
</div>