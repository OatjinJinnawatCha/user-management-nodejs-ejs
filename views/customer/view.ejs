<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1>View Customer Detail</h1>
    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-small btn-outline-secondary">Share</button>
            <button type="button" class="btn btn-small btn-outline-secondary">Export</button>
        </div>
    </div>
</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">View Customer (<%= customer.firstName %> <%= customer.lastName %>)</li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>Last Updated : <%= new Date(customer.updatedAt).toUTCString() %></b>
            <b>User ID : <%= customer._id %></b>
        </div>
    </div>
</div>

<ul class="list-group">
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 160px"><b>Name:</b></div>
            <div class="col"><b><%= customer.firstName %> <%= customer.lastName %></b></div>
        </div>
    </li>
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 160px"><b>Telephone Number:</b></div>
            <div class="col"><b><%= customer.telephoneNum %></b></div>
        </div>
    </li>
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 160px"><b>Email:</b></div>
            <div class="col"><b><%= customer.email %></b></div>
        </div>
    </li>
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 160px"><b>Details:</b></div>
            <div class="col"><b><%= customer.detail %></b></div>
        </div>
    </li>
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 160px"><b>Date Created:</b></div>
            <div class="col"><b><%= new Date(customer.createdAt).toUTCString() %></b></div>
        </div>
    </li>
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 160px"><b>Date Updated:</b></div>
            <div class="col"><b><%= new Date(customer.updatedAt).toUTCString() %></b></div>
        </div>
    </li>
</ul>